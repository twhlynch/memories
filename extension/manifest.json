{
    "manifest_version": 3,
    "name": "Memories",
    "version": "1.0",
    "description": "View website code comments as page content",
    "permissions": ["scripting", "activeTab", "contextMenus", "tabs"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["script.js"],
            "css": ["style.css"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}